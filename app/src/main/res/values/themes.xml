<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NotesApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
    </style>

    <style name="Theme.NotesApp" parent="Base.Theme.NotesApp" />

    <!-- Splash Screen -->
    <style name="splashScreen" parent="Theme.NotesApp.Fullscreen">
        <item name="android:windowBackground">@drawable/background_splashscreen</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
    </style>

    <!-- Button colors -->
    <style name="Button.White" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="Theme.SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
    </style>

    <style name="Theme.NotesApp.Fullscreen" parent="Theme.NotesApp">
        <item name="android:actionBarStyle">@style/Widget.Theme.NotesApp.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.NotesApp.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

</resources>